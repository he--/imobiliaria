{% include "base.html.twig" %}

<!-- Begin Page Content -->
<div class="container-fluid">
        <!-- DataTales Example -->
        <h1 class="h3 mb-2 text-gray-800">Tables</h1>
        <div class="card shadow mb-4">
                <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Lista de Clientes</h6>
                </div>
                <div class="card-body">
                        <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                        <thead>
                                        <tr>
                                                <th>Nome</th>
                                                <th>CpfCnpj</th>
                                                <th>E-mail</th>
                                                <th>Sexo</th>
                                                <th>Data Cadastro</th>
                                                <th>Editar/Deletar</th>
                                        </tr>
                                        </thead>
                                        <tfoot>
                                        <tr>
                                                <th>Nome</th>
                                                <th>CpfCnpj</th>
                                                <th>E-mail</th>
                                                <th>Sexo</th>
                                                <th>Data Cadastro</th>
                                                <th>Editar/Deletar</th>
                                        </tr>
                                        </tr>
                                        </tfoot>
                                        <tbody>
                                         {% for usuario in usuarios %}
                                         <tr role="row" class="even">
                                                <td class="sorting_1">{{ usuario.nome }}</td>
                                                <td>{{ usuario.cpfCnpj }}</td>
                                                <td>{{ usuario.email }}</td>
                                                <td>{{ usuario.sexo }}</td>
                                                <td>{{ usuario.dtCadastro|date("m/d/Y") }}</td>
                                                <td><a href="{{ path('editar_usuario', { 'id': usuario.id}) }}" class="btn btn-success btn-circle btn-sm">
                                                                <i class="fas fa-check"></i>
                                                    </a>
                                                    <a href="{{ path('deletar_usuario', { 'id': usuario.id}) }}" class="btn btn-danger btn-circle btn-sm">
                                                        <i class="fas fa-trash"></i>
                                                    </a>
                                                </td>
                                        </tr>
                                        </tbody>
                                        {% endfor %}
                                </table>
                        </div>
                </div>
        </div>

        </div>
</div>

{% include "footer.html.twig" %}









