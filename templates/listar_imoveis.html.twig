{% include "base.html.twig" %}

<!-- Begin Page Content -->
<div class="container-fluid">

        <!-- DataTales Example -->
        <div class="card shadow mb-4">
                <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Lista de Imov√©is Cadastrados</h6>
                </div>
                <div class="card-body">
                        <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                        <thead>
                                        <tr>
                                                <th>Status</th>
                                                <th>Caracterisitcas</th>
                                                <th>Observacao</th>
                                                <th>Tipo do Imovel</th>
                                                <th>Data Cadastro</th>
                                                <th>Bairro</th>
                                                <th>Rua</th>
                                        </tr>
                                        </thead>
                                        <tfoot>
                                        <tr>
                                                <th>Status</th>
                                                <th>Caracterisitcas</th>
                                                <th>Observacao</th>
                                                <th>Tipo do Imovel</th>
                                                <th>Data Cadastro</th>
                                                <th>Bairro</th>
                                                <th>Rua</th>
                                        </tr>
                                        </tr>
                                        </tfoot>
                                        <tbody>
                                        </tbody>
                                         {% for imovel in imoveis %}
                                        <tr>
                                                <td>{{ imovel.status }}</td>
                                                <td>{{ imovel.caracteristicas }}</td>
                                                <td>{{ imovel.observacao }}</td>
                                                <td>{{ imovel.tipoImovel }}</td>
                                                <td>{{ imovel.dtCadastro|date("m/d/Y") }}</td>
                                                <td>{{ imovel.endereco.bairro }}</td>
                                                <td>{{ imovel.endereco.logradouro }}</td>
                                                <td>
                                                        <a href="{{ path('imovel_editar', { 'id': imovel.id}) }}" class="btn btn-success btn-circle btn-sm">
                                                                <i class="fas fa-check"></i>
                                                        </a>
                                                        <a href="{{ path('deletar_imovel', { 'id': imovel.id}) }}" class="btn btn-danger btn-circle btn-sm">
                                                                <i class="fas fa-trash"></i>
                                                        </a>
                                                </td>
                                        </tr>
                                        {% endfor %}
                                </table>
                        </div>
                </div>
        </div>

        </div>
</div>

